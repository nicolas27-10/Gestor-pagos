---
const title = "Gestión de Alumnos y Pagos KSK Dojo Shiró"
---

<header class="bg-blue-600 text-white p-4 flex items-center justify-between">
    <button
        id="backButton"
        class=" bg-blue-500 p-2 rounded-full hover:bg-blue-700 transition"
        aria-label="Volver"
    >
        <!-- SVG para la flecha -->
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-6 w-6 m-0"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
        >
            <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M15 19l-7-7 7-7"
            />
        </svg>
    </button>
    <h1 class="md:text-2xl text-xl font-bold text-center flex-grow">{title}</h1>
    <img src="/public/KSK.jpeg" alt="ksk" class="h-12 w-12 rounded-full object-cover object-center" />
</header>

<script>
    const defaultRedirect = "/";
    document.addEventListener("DOMContentLoaded", () => {
        const backButton = document.getElementById("backButton");
        if (backButton) {
            backButton.addEventListener("click", () => {
            if (history.length > 1) {
                history.back(); // Navega a la página anterior si existe historial
            } else {
                window.location.href = defaultRedirect; // Redirige a una URL predeterminada
                }
            });
        }
    });
</script>
