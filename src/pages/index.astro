    <main class="flex-grow container mx-auto p-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
        <a href="/alumnos" class="bg-white shadow-md p-6 rounded-md hover:bg-blue-100 transition">
